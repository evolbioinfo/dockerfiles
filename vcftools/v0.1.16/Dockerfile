# VCFtools
# A set of tools written in Perl and C++ for working with VCF files, such as those generated by the 1000 Genomes Project.
#
# Project website: https://vcftools.github.io/

# base image: Ubuntu
FROM ubuntu:16.04

# File Author / Maintainer
MAINTAINER Anna Zhukova <anna.zhukova@pasteur.fr>

RUN apt-get update --fix-missing \
    && apt-get install -y wget make gcc autoconf g++ pkg-config zlib1g-dev perl \
    && cd /usr/local/ \
    && wget -O vcftools-0.1.16.tar.gz https://github.com/vcftools/vcftools/archive/v0.1.16.tar.gz \
    && tar xvzf vcftools-0.1.16.tar.gz \
    && rm -f vcftools-0.1.16.tar.gz \
    && cd /usr/local/vcftools-0.1.16 \
    && ./autogen.sh \
    && ./configure \
    && make \
    && make install \
    && cd /usr/local \
    && rm -rf vcftools-0.1.16 \
    && apt-get remove -y wget make gcc autoconf g++ pkg-config zlib1g-dev \
    && apt-get autoremove -y \
    && apt-get clean \
    && rm -rf /var/lib/apt/lists/* \
    && mkdir /pasteur

ENTRYPOINT ["vcftools"]
# VCFtools
# A set of tools written in Perl and C++ for working with VCF files, such as those generated by the 1000 Genomes Project.
#
# Project website: https://vcftools.github.io/

# base image: Ubuntu
FROM ubuntu:20.04

# File Author / Maintainer
MAINTAINER Anna Zhukova <anna.zhukova@pasteur.fr>

ENV VERSION 581c231991cb4db017b92eabc573e17128541ab5
ENV DEBIAN_FRONTEND="noninteractive" TZ="Europe/Paris"

RUN apt-get update --fix-missing \
    && apt-get install -y git wget make gcc autoconf g++ pkg-config zlib1g-dev \
    && cd /usr/local/ \
    && git clone https://github.com/vcftools/vcftools.git \
    && cd /usr/local/vcftools \
    && git checkout $VERSION \
    && ./autogen.sh \
    && ./configure \
    && make \
    && make install \
    && cd /usr/local \
    && rm -rf vcftools \
    && apt-get remove -y git wget make gcc autoconf g++ pkg-config zlib1g-dev \
    && apt-get autoremove -y \
    && apt-get clean \
    && rm -rf /var/lib/apt/lists/* \
    && mkdir /pasteur

ENTRYPOINT ["vcftools"]
